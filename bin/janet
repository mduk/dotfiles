#!/bin/bash

janet=janet.local
key='janet'
keypath="$HOME/.ssh/${key}_rsa"

ssh_key="-i $keypath"
ssh_args=""
ssh_dest="$USER@$janet"
ssh="ssh -At $ssh_key $ssh_dest"

sync() {
  while [[ $# -gt 0 ]]
  do
    rsync -avhzK -e "ssh ${ssh_key}" "$HOME/$1/" "$ssh_dest:~/$1"
    shift
  done
}

case "$1" in

  sync)
    sync ${2:-Documents Music Pictures Camera}
    ;;

  push)
    rsync -avhz -e "ssh ${ssh_key}" "$2/" "$ssh_dest:$2"
    ;;

  pull) rsync -avhz -e "ssh ${ssh_key}" "$ssh_dest:$2/" "$2"
    ;;

  screen)
    $ssh "screen -DR $2"
    ;;

  discs)
    $ssh /home/daniel/bin/discs
    ;;

  *)
    $ssh "$@"
    ;;

esac

#!/bin/bash

if [[ -n $1 ]]
then echo "$(date +%Y-%m-%d) $1" >> ~/.weight.dat
fi

tmp=$(mktemp)

cat >$tmp <<'EOF'
set terminal png size 1280,720
set xdata time
set timefmt "%Y-%m-%d"
set key off
set title "Weight"
set ylabel "Kilos"

plot '~/.weight.dat' using 1:2 with lines smooth bezier
EOF

gnuplot $tmp | display

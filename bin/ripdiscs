#!/bin/bash

declare drive=/dev/dvd

clear

for d
do
  eject $drive
  echo '################################################################################'
  echo "Insert $(sed -r '/S[0-9]+D[0-9]+/s/S/Series /; s/D/ Disc /' <<<"$d")";
  echo '################################################################################'
  until cdstatus $drive >/dev/null; do :; done
  dvdbackup -p -v -M -o "$d"
  echo
  echo
done

eject

echo '################################################################################'
echo "All Done. :)"
echo '################################################################################'

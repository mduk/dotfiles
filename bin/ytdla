#!/bin/bash

pushd $HOME/Music

alert() {
  notify-send \
    --icon=/home/daniel/Icons/youtube-icon-full-color.png \
    "YouTube Download" \
    "$1"
}

alert "Download Beginning..."

youtube-dl \
  -f m4a \
  --output "%(uploader)s/%(title)s.%(ext)s" \
  "${1:-$(cbp)}"

if [[ $? -eq 0 ]];
  then alert "Download Complete"
  else alert "Download Failed"
fi

popd

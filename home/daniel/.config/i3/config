set $www                      www
set $randomBackground         false
set $terminal                 /usr/bin/konsole
set $filemanager              /usr/bin/nautilus
set $browser                  /usr/bin/chromium-browser

set $touchpad                 "SYNA2393:00 06CB:7A13 Touchpad"
set $touchscreen              "Wacom HID 488E Finger"
set $outputInternal           eDP-1
set $outputHdmi               DP-3

################################################################################
# i3 Font
################################################################################
font pango:monospace 12


################################################################################
# Modifier Keys
################################################################################
set $alt              Mod1
set $win              Mod4
set $angryalt         Mod5
floating_modifier $alt


################################################################################
# Function Keys
################################################################################
bindsym XF86AudioMute         exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioLowerVolume  exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume  exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioPrev         exec mpc prev
bindsym XF86AudioPause        exec mpc toggle
bindsym XF86AudioPlay         exec mpc toggle
bindsym XF86AudioNext         exec mpc next
#bindsym $win+p                exec touch /tmp/display
bindsym XF86Search            exec $www
# F10 / kbdbacklight
bindsym XF86MonBrightnessDown exec xbacklight -dec
bindsym XF86MonBrightnessUp   exec xbacklight -inc
bindsym XF86WLAN              exec touch /tmp/wlan


################################################################################
# Scroll Wheel Volume
################################################################################
bindsym --whole-window --border $alt+button5 exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym --whole-window --border $alt+button4 exec --no-startup-id pactl set-sink-volume 0 +5%


################################################################################
# Monitor Configuration / Touchscreen / Polybar
################################################################################
exec_always auto-monitors


################################################################################
# PulseAudio
################################################################################
exec_always pulseaudio
exec vol mute


################################################################################
# Touchpad
################################################################################
exec_always xinput set-prop $touchpad "libinput Tapping Enabled" 1
exec_always xinput set-prop $touchpad "libinput Natural Scrolling Enabled" 1
exec_always xinput set-prop $touchpad "libinput Accel Speed" 2.000000
exec_always xinput set-prop $touchpad "libinput Disable While Typing Enabled" 1
exec_always xinput set-prop $touchpad "libinput Click Method Enabled" 0 1


################################################################################
# Caffeine
################################################################################
exec caffeine-indicator &


################################################################################
# Control instead of Caps Lock
################################################################################
exec_always setxkbmap -option ctrl:nocaps
exec_always xcape


################################################################################
# XScreensaver
################################################################################
exec_always xscreensaver -nosplash
bindsym $alt+Shift+L exec i3-screensaver lock


################################################################################
# X Root Window
################################################################################
exec_always $randomBackground
bindsym $alt+Shift+b exec $randomBackground

exec_always xsetroot -cursor_name left_ptr





bindsym $alt+Escape exec umsd



################################################################################
# Right-Handed Navigation
################################################################################
